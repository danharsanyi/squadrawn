<!DOCTYPE html>
<html>
<head>
  <title>Squadrawn</title>
  <%= stylesheet_link_tag   "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://js.stripe.com/v2/" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if @current_user %>
<header>

<nav>
        <%= link_to "Logout", logout_path, :method => :delete %>
        <%= link_to "View Profile", user_path(@current_user) %>
        <%= link_to "View All Designs", designs_path %>
        <%= link_to "Create Design", designs_new_path %>
  </nav>
<p>Welcome <%= @current_user.name %>!</p>
</header>
<script>
        var app = app || {};
        app.util = {};
        app.util.key = "<%= Rails.configuration.stripe[:publishable_key] %>";
</script>
<br>
<br>
<br>
<br>
<br>
<br>
<% end %>



<%= yield %>



</body>
</html>
